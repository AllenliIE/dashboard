{{>aside}}
<div class="col-10 p-0" style="background-color:#CEE1F2">
  <div class="m-3 text-center" style="witdh:1140px; height:890px;">
    <div class="row">
      <div class="card col fw-bold m-3 fw-bold fs-3" style="height:140px;color:#14597F">
        <i class="m-3" style="border-bottom:2px solid #14597F">Sale Target</i>
        <div class="d-flex align-items-center justify-content-evenly">
          <i class="fa-solid fa-dollar-sign"></i>
          <i>{{saleTarget}}</i>
        </div>
      </div>
      <div class="card col fw-bold m-3 fw-bold fs-3" style="height:140px;color:#14597F">
        <i class="m-3" style="border-bottom:2px solid #14597F">Total Sale</i>
        <div class="d-flex align-items-center justify-content-evenly">
          <i class="fa-solid fa-dollar-sign"></i>
          <i>{{totalSale}}</i>
        </div>
      </div>
      <div class="card col fw-bold m-3 fw-bold fs-3" style="height:140px;color:#14597F">
        <i class="m-3" style="border-bottom:2px solid #14597F">Total Amount</i>
        <div class="d-flex align-items-center justify-content-evenly">
          <i class="fa-solid fa-dollar-sign"></i>
          <i>{{totalAmount}}</i>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="card col m-3" style="height:330px;">
        <canvas class="mt-3" id="lineChart" style="height:300px"></canvas>
      </div>
    </div>
    <div class="row">
      <div class="card col m-3" style="height:330px;">
        <canvas class="mt-3" id="barChart" style="height:300px"></canvas>
      </div>
    </div>
  </div>
</div>
{{>footer}}

<script>
  var xValues = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
  var yValues = [0.5, 0.6, 0.7, 0.65, 0.67, 0.5, 0.44, 0.44, 0.41, 0.8, 0.9, 0.95];

  new Chart("lineChart", {
    type: "line",
    data: {
      labels: xValues,
      datasets: [{
        label: 'Sale/Month',
        backgroundColor: "rgb(255, 99, 132)",
        borderColor: "rgb(255, 99, 132)",
        data: yValues
      }]
    },
    options: {
      legend: { display: false },
      scales: {
        yAxes: [{ ticks: { min: 0, max: 1 } }],
      }
    }
  });
</script>
<script>
  const labels = [
    'Jan', 'Feb', 'Mar', 'Apr',
    'May', 'Jun', 'jul', 'Aug',
    'Sep', 'Oct', 'Nov', 'Dec'
  ]

  const data = {
    labels: labels,
    datasets: [{
      label: 'Amount/Month',
      backgroundColor: 'rgb(75, 192, 192)',
      borderColor: 'rgb(75, 192, 192)',
      data: [
        0.8, 0.82, 0.79, 0.83,
        0.85, 0.87, 0.82, 0.81,
        0.8, 0.88, 0.91, 0.96
      ],
    }]
  };

  const config = {
    type: 'bar',
    data: data,
    options: {}
  };

  const barChart = new Chart(
    document.getElementById('barChart').getContext('2d'),
    config
  );
</script>